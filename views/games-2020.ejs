<!DOCTYPE html>
<html lang="en" prefix="og: http://ogp.me/ns#">
<%- include('./partials/head.ejs') %>
<body>

<%- include('./partials/nav.ejs') %>

<main class="container-xxl py-4 py-xl-5 mt-5">
    <section class="text-center">
        <h1 class="display-1 mb-0">2020 Games</h1>
        <ul class="nav justify-content-center mb-5">
            <% /* %>
            <!-- <li class="nav-item">
                <span class="nav-link">Preseason</span>
                <% if (seasonMeta === 'Preseason') { %>
                <a class="nav-link active" aria-current="page" href="/games/2020/preseason">Preseason</a>
                <% } else { %>
                <a class="nav-link" href="/games/2020/preseason">Preseason</a>
                <% } %>
            </li> -->
            <% */ %>
            <li class="nav-item">
                <% if (seasonMeta === 'Regular Season') { %>
                <a class="nav-link active" aria-current="page" href="/games/2020/regularseason">Regular Season</a>
                <% } else { %>
                <a class="nav-link" href="/games/2020/regularseason">Regular Season</a>
                <% } %>
            </li>
            <li class="nav-item">
                <span class="nav-link">
                    ... no Pre- or Postseason for 2020
                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-emoji-neutral" style="margin-top: -0.2rem;" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M4 10.5a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7a.5.5 0 0 0-.5.5zm3-4C7 5.672 6.552 5 6 5s-1 .672-1 1.5S5.448 8 6 8s1-.672 1-1.5zm4 0c0-.828-.448-1.5-1-1.5s-1 .672-1 1.5S9.448 8 10 8s1-.672 1-1.5z"/>
                    </svg>
                </span>
            </li>
            <% /* %>
            <!-- <li class="nav-item">
                <span class="nav-link">Postseason</span>
                <% if (seasonMeta === 'Postseason') { %>
                <a class="nav-link active" aria-current="page" href="/games/2020/postseason">Postseason</a>
                <% } else { %>
                <a class="nav-link" href="/games/2020/postseason">Postseason</a>
                <% } %>
            </li> -->
            <% */ %>
        </ul>
        <div class="row g-3">
            <% if (games.length > 0) { %>
                <% games.forEach(game => { %>
                    <div class="col-lg-6 col-xl-4">
                        <div class="card game-card shadow">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div class="row justify-content-between align-items-center g-2 mb-2">
                                    <div class="col-sm-4"><p class="lead mb-0"><%= game.homeTeam %></p></div>
                                    <div class="col-sm-4"><p class="h1 mx-4 mb-0">VS</p></div>
                                    <div class="col-sm-4"><p class="lead mb-0"><%= game.awayTeam %></p></div>
                                </div>
                                <div class="text-center">
                                    <p class="h4"><%= game.thornsWinLossDraw %></p>
                                    <p class="lead"><%= game.finalScore %></p>
                                </div>
                                <% if (seasonMeta === 'Regular Season') { %>
                                    <p class="text-center mb-0"><a href="/games/2020/regularseason/<%= game._id %>">View Details</a></p>
                                <% } else if (seasonMeta === 'Preseason') { %>
                                    <p class="text-center mb-0"><a href="/games/2020/preseason/<%= game._id %>">View Details</a></p>
                                <% } else if (seasonMeta === 'Postseason') { %>
                                    <p class=text-center "mb-0"><a href="/games/2020/postseason/<%= game._id %>">View Details</a></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-md-4">
                    <p>No games to display. For some reason.</p>
                </div>
            <% } %>
        </div>
    </section>
</main>

<%- include('./partials/footer.ejs') %>

</body>
</html>
