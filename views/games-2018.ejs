<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>

<%- include('./partials/nav.ejs') %>

<main class="container-xxl py-4 py-xl-5 mt-5">
    <section class="h-100 d-flex flex-column justify-content-center text-center pb-5">
        <h1 class="display-1 mb-2">2018 Games</h1>
        <p class="lead text-muted mb-5"><%= seasonMeta %></p>
        <div class="row g-3">
            <% if (games.length > 0) { %>
                <% games.forEach(game => { %>
                    <div class="col-lg-6 col-xl-4">
                        <div class="card game-card shadow">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div class="row justify-content-between align-items-center g-2 mb-2">
                                    <div class="col-sm-4"><p class="lead mb-0"><%= game.homeTeam %></p></div>
                                    <div class="col-sm-4"><p class="h1 mx-4 mb-0">VS</p></div>
                                    <div class="col-sm-4"><p class="lead mb-0"><%= game.awayTeam %></p></div>
                                </div>
                                <div class="text-center">
                                    <p class="h4"><%= game.thornsWinLossDraw %></p>
                                    <p class="lead"><%= game.finalScore %></p>
                                </div>
                                <% if (seasonMeta === 'Regular Season') { %>
                                    <p class="text-center mb-0"><a href="/games/2018/regularseason/<%= game._id %>">View Details</a></p>
                                <% } else if (seasonMeta === 'Preseason') { %>
                                    <p class="text-center mb-0"><a href="/games/2018/preseason/<%= game._id %>">View Details</a></p>
                                <% } else if (seasonMeta === 'Postseason') { %>
                                    <p class=text-center "mb-0"><a href="/games/2018/postseason/<%= game._id %>">View Details</a></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-md-4">
                    <p>No games to display. For some reason.</p>
                </div>
            <% } %>
        </div>
    </section>
</main>

<%- include('./partials/footer.ejs') %>

</body>
</html>
