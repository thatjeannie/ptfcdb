    function ordinalOf(date) {
        let suffix = '';
        if (date === 1 || date === 21 || date === 31) {
            suffix = 'st';
        } else if (date === 2 || date === 22) {
            suffix = 'nd'
        } else if (date === 3 || date === 23) {
            suffix = 'rd'
        } else {
            suffix = 'th'
        }

        return suffix;
    }

    <!-- Game Time -->
    prettyTime = function(date) {
        const regex = /:00.*?(:00)/gm;
        const substr = `$1`;

        const options = { timeZone: 'America/Los_Angeles', timeZoneName: 'short', weekday: 'long' }

        let prettierTime = date.toLocaleTimeString('en-US', options).replace(regex, substr);

        return prettierTime;
    }

    <!-- Game Date -->
    prettyDate = function(date) {
        const dateStringOptions = { timeZone: 'America/Los_Angeles', timeZoneName: 'short', dateStyle: 'full', timeStyle: 'short' }
        let prettierDate = date.toLocaleString('en-US', dateStringOptions);

        return prettierDate;
    }

    localDate = function(date) {
        const dateStringOptions = { timeZone: 'America/Los_Angeles', timeZoneName: 'short', dateStyle: 'full', timeStyle: 'short' }
        const localDate = date.toLocaleString('en-US', dateStringOptions);

        return localDate;
    }

    justDay = function(date) {
        const newLocalDate = localDate(date);
        const datePieces = newLocalDate.split(', ');
        const gameDay = datePieces[0];

        return gameDay;
    }
    justMonthDate = function(date) {
        const newLocalDate = localDate(date);
        const datePieces = newLocalDate.split(', ');
        const gameMonthDate = datePieces[1];

