    <!-- Game Date -->
    function ordinalOf(date) {
        let suffix = '';
        if (date === 1 || date === 21 || date === 31) {
            suffix = 'st';
        } else if (date === 2 || date === 22) {
            suffix = 'nd'
        } else if (date === 3 || date === 23) {
            suffix = 'rd'
        } else {
            suffix = 'th'
        }

        return suffix;
    }

    <!-- Game Time -->
    prettyTime = function(date) {
        const regex = /:00.*?(:00)/gm;
        const substr = `$1`;

        const options = { timeZone: 'America/Los_Angeles', timeZoneName: 'short' }

        let prettierTime = date.toLocaleTimeString('en-US', options).replace(regex, substr);

        return prettierTime;
    }

    <!-- Game Date -->
    prettyDate = function(date) {
        const options = { timeZone: 'America/Los_Angeles', timeZoneName: 'short' }

        let prettierDate = date.toLocaleString('en-US', options);

        return prettierDate;
    }
