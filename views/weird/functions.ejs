<%
    <!-- Fix the GD Game Date -->
    localDate = function(date) {
        const dateStringOptions = { timeZone: 'America/Los_Angeles', timeZoneName: 'short', dateStyle: 'full', timeStyle: 'short' }
        const localDate = date.toLocaleString('en-US', dateStringOptions);

        return localDate;
    }

    justDay = function(date) {
        const newLocalDate = localDate(date);
        const datePieces = newLocalDate.split(', ');
        const gameDay = datePieces[0];

        return gameDay;
    }
    justMonthDate = function(date) {
        const newLocalDate = localDate(date);
        const datePieces = newLocalDate.split(', ');
        const gameMonthDate = datePieces[1];

        return gameMonthDate;
    }
    justTime = function(date) {
        const newLocalDate = localDate(date);
        const datePieces = newLocalDate.split(', ');
        let gameTime = datePieces[2];
        gameTime = gameTime.replace("2021 ", "");
        gameTime = gameTime.replace("2020 ", "");
        gameTime = gameTime.replace("2019 ", "");
        gameTime = gameTime.replace("2018 ", "");

        return gameTime;
    }
    justTimeGD = function(date) {
        const newLocalDate = localDate(date);
        const datePieces = newLocalDate.split(', ');
        let gameTime = datePieces[2];
        gameTime = gameTime.replace("2021 ", "2021, ");
        gameTime = gameTime.replace("2020 ", "2020, ");
        gameTime = gameTime.replace("2019 ", "2019, ");
        gameTime = gameTime.replace("2018 ", "2018, ");
        gameTime = gameTime.replace("at ", "");

        return gameTime;
    }

    dateStripTime = function(date) {
        const dateStringOptions = { timeZone: 'America/Los_Angeles' }
        const dateStripTime = date.toLocaleDateString('en-US', dateStringOptions);

        return dateStripTime;
    }
%>
